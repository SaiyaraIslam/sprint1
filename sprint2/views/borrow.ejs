<!DOCTYPE html> <!-- html doctype -->
<html lang="en">
<head>
  <title>Borrow Book</title> <!-- page title -->
  <!--linking BS styling & css styling-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">

</head>
<body class="container py-4"> <!--BS styling with padding-->
  <h1 class="mb-4">Borrow a Book</h1> <!--header title-->
  <a href="/" class="btn btn-secondary mb-3">Back</a> <!--back button-->
  <form method="POST" action="/borrow" class="row g-3"> <!--form to borrow book-->
    <div class="col-md-6">
      <label class="form-label">Customer</label> <!--dropdown label-->
      <select name="customerid" class="form-select" required>
        <% customers.forEach(c => { %>
          <option value="<%= c.id %>"><%= c.firstname %> <%= c.lastname %></option> <!--customer name section-->
        <% }) %>
      </select>
    </div>
    <div class="col-md-6"> <!--book selection dropdown-->
      <label class="form-label">Book</label> <!--label-->
      <select name="bookid" class="form-select" required> <!--dropdown menu-->
        <% books.forEach(b => { if (b.status === 'available') { %> <!--only showing the books available-->
          <option value="<%= b.id %>"><%= b.title %></option>
        <% }}); %>
      </select>
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-success">Borrow</button> <!--submit button-->
    </div>
  </form>
</body>
</html>
